{% set title = 'Забыли пароль' %}
{% include 'templates/simple_header.twig' %}

{{ form_open('login/lost') }}
	<div class="box login">

		<div class="judge_logo">
			<a href="{{ site_url() }}"><img src="{{ base_url('assets/images/banner.png') }}"/></a>
		</div>

		<div class="login_form">
			<div class="login1">
				<p>
					<label for="form_email">Email</label><br/>
					<input id="form_email" type="email" name="email" class="sharif_input" value="{{ set_value('email') }}"/>
					{{ form_error('email', '<div class="shj_error">', '</div>') }}
				</p>
				{% if sent %}
					<div class="shj_ok">Мы отправили на вашу почту письмо для сброса пароля.</div>
				{% endif %}
			</div>
			<div class="login2">
				<p style="margin:0;">
					<a href="{{ site_url('login') }}">Войти</a>
					<input type="submit" value="Сбросить пароль" id="sharif_submit"/>
				</p>
			</div>
		</div>

	</div>
</form>
</body>
</html>