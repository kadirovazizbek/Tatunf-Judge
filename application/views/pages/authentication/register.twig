{% set title = 'Регистрация на сайте' %}
{% include 'templates/simple_header.twig' %}

{{ form_open('login/register') }}
<div class="box register">

	<div class="judge_logo">
		<a href="{{ site_url() }}"><img src="{{ base_url('assets/images/banner.png') }}"/></a>
	</div>

	<div class="login_form">
		<div class="login1">
			{% if registration_code_required %}
			<p>
				<label for="form_reg_code">Регистрационный код</label><br/>
				<input id="form_reg_code" type="text" name="registration_code" required="required" autofocus="autofocus" class="sharif_input" value="{{ set_value('registration_code') }}"/>
				{{ form_error('registration_code', '<div class="shj_error">', '</div>') }}
			</p>
			{% endif %}
			<p>
				<label for="form_username">Логин</label><br/>
				<input id="form_username" type="text" name="username" required="required" pattern="[0-9A-Za-z]{3,20}" title="Поле Логин должно содержать от 3 до 20 символов, и содержать только символы в нижнем регистре и цифры" class="sharif_input" value="{{ set_value('username') }}"/>
				{{ form_error('username', '<div class="shj_error">', '</div>') }}
			</p>
			<p>
				<label for="form_email">Email</label><br/>
				<input id="form_email" type="email" autocomplete="off" name="email" required="required" class="sharif_input" value="{{ set_value('email') }}"/>
				{{ form_error('email','<div class="shj_error">','</div>') }}
			</p>
			<p>
				<label for="form_password">Пароль</label><br/>
				<input id="form_password" type="password" name="password" required="required" pattern=".{6,200}" title="Пароль должен содержать как минимум 6 символов" class="sharif_input"/>
				{{ form_error('password','<div class="shj_error">','</div>') }}
			</p>
			<p>
				<label for="form_password_2">Повторите Пароль</label><br/>
				<input id="form_password_2" type="password" name="password_again" required="required" pattern=".{6,200}" title="Поле Повторите Пароль должен содержать как минимум 6 символов" class="sharif_input"/>
				{{ form_error('password_again','<div class="shj_error">','</div>') }}
			</p>
		</div>
		<div class="login2">
			<p style="margin:0;">
				<a href="{{ site_url('login') }}">Войти</a>
				<input type="submit" value="Зарегистрироваться" id="sharif_submit"/>
			</p>
		</div>
	</div>

</div>
</form>
</body>
</html>